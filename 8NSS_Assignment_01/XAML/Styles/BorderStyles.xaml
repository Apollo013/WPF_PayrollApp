<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <!--<ResourceDictionary Source="/XAML/Brushes/DataGridBrushes.xaml"/>-->
        <ResourceDictionary Source="/XAML/Brushes/GenericBrushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--This Style Is Used By Our Detail Forms, i.e. Settings, Login and Pay Packet Views.-->
    <Style x:Key="BorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush_BorderBrush}"/>
        <Setter Property="Background" Value="{StaticResource DetailFormBackground}"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <Style x:Key="SummaryBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Background" Value="WhiteSmoke"/>
        <Setter Property="Height" Value="21"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Opacity" Value="0.8"/>
        <Setter Property="Margin" Value="6"/>
    </Style>

</ResourceDictionary>
