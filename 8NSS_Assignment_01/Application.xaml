                <ResourceDictionary Source="/XAML/Buttons/GlassButtonStyle.xaml"/>
                <ResourceDictionary Source="/XAML/Buttons/GlassButtonSmallStyle.xaml"/>
                <ResourceDictionary Source="/XAML/Buttons/UpdateButtonsStyle.xaml"/>
                <ResourceDictionary Source="/XAML/TextStyles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="/XAML/TextStyles/PayProHeaderStyles.xaml"/>
                <ResourceDictionary Source="/XAML/TextStyles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="/XAML/Styles/BorderStyles.xaml"/>
                <ResourceDictionary Source="/XAML/Styles/DividerStyles.xaml"/>
                <ResourceDictionary Source="/XAML/Styles/ImageStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
   </Application.Resources>
</Application>
